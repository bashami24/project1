// src/components/AddLeaveForm.tsx
import React, { useState } from 'react';
import { addLeaveRequestAPI } from '../services/LeaveService';
import { LeaveRequest } from '../models/LeaveRequest';

const AddLeaveForm: React.FC = () => {
  const [leaveName, setLeaveName] = useState('');
  const [startDate, setStartDate] = useState('');
  const [endDate, setEndDate] = useState('');

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    const newLeaveRequest: LeaveRequest = { leaveName, startDate, endDate };
    try {
      await addLeaveRequestAPI(newLeaveRequest);
      // Reset form inputs
      setLeaveName('');
      setStartDate('');
      setEndDate('');
      console.log('Leave request submitted successfully');
    } catch (error) {
      console.error('Error submitting leave request:', error);
    }
  };

  return (
    <div>
      <h1>Add Leave Request</h1>
      <form onSubmit={handleSubmit}>
        <label>
          Leave Name:
          <input type="text" value={leaveName} onChange={(e) => setLeaveName(e.target.value)} />
        </label>
        <br />
        <label>
          Start Date:
          <input type="date" value={startDate} onChange={(e) => setStartDate(e.target.value)} />
        </label>
        <br />
        <label>
          End Date:
          <input type="date" value={endDate} onChange={(e) => setEndDate(e.target.value)} />
        </label>
        <br />
        <button type="submit">Submit</button>
      </form>
    </div>
  );
};

export default AddLeaveForm;
