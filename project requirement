// src/components/AddLeaveForm.tsx
import React, { useState } from 'react';
import { LeaveRequest } from '../models/LeaveRequest';
import { addLeaveRequestAPI } from '../services/LeaveService';

const AddLeaveForm: React.FC = () => {
  const [leaveRequest, setLeaveRequest] = useState<LeaveRequest>({
    leaveName: '',
    startDate: '',
    endDate: '',
  });

  const handleChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const { name, value } = e.target;
    setLeaveRequest((prevLeaveRequest) => ({
      ...prevLeaveRequest,
      [name]: value,
    }));
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    try {
      await addLeaveRequestAPI(leaveRequest);
      // Optionally, you can reset the form here
      setLeaveRequest({
        leaveName: '',
        startDate: '',
        endDate: '',
      });
      console.log('Leave request submitted successfully');
    } catch (error) {
      console.error('Error submitting leave request:', error);
    }
  };

  return (
    <div>
      <h1>Add Leave Request</h1>
      <form onSubmit={handleSubmit}>
        <label>
          Leave Name:
          <input
            type="text"
            name="leaveName"
            value={leaveRequest.leaveName}
            onChange={handleChange}
          />
        </label>
        <br />
        <label>
          Start Date:
          <input
            type="date"
            name="startDate"
            value={leaveRequest.startDate}
            onChange={handleChange}
          />
        </label>
        <br />
        <label>
          End Date:
          <input
            type="date"
            name="endDate"
            value={leaveRequest.endDate}
            onChange={handleChange}
          />
        </label>
        <br />
        <button type="submit">Submit</button>
      </form>
    </div>
  );
};

export default AddLeaveForm;
