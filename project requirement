  const handleUpdateProduct = (id: number, newName: string, newPrice: number, seller: number) => {
        if(!newName || newPrice === 0 || newSeller === 0){ 
           
            return;
        }
        updateProductAPI(id, newName, newPrice, seller).then(() => {
            const updatedProducts = products.map(product => {
                if (product.id === id) {
                    return { ...product, name: newName, price: newPrice, seller: seller };
                }
                return product;
            });
            setProducts(updatedProducts);
            setShowMenuId(null);
        });
    };


<input type="text" placeholder="New Name" onChange={(e) => setNewName(e.target.value)} />
                            <input type="number" placeholder="New Price" onChange={(e) => setNewPrice(parseInt(e.target.value) || 0)} />
                            <input type="number" placeholder="Seller ID" onChange={(e) => setNewSeller(parseInt(e.target.value) || 0)} />
                            <input type="number" name="id" value={product.id}onChange={handleChange} />


